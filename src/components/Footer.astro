    .datos {
        display: flex;
        flex-direction: row;
        align-items: flex-start;
        justify-content: space-between;
        background: #f8f8f8;
        padding: 2rem 3rem;
        gap: 2rem;
        flex-wrap: wrap;
    }

    .datos > img,
    .datos > .navbar__icon {
        margin-right: 0.5rem;
    }

    .datos > p {
        margin: 0 1.5rem 0 0;
        align-self: center;
        font-size: 1rem;
        color: #222;
    }

    .redes {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 0.5rem;
    }

    .redes .navbar__icon {
        margin: 0 0.5rem;
        color: #222;
        transition: color 0.2s;
        cursor: pointer;
    }

    .redes .navbar__icon:hover {
        color: #1976d2;
    }

    .redes hr {
        height: 32px;
        width: 1px;
        background: #0d0d0d;
        border: none;
        margin: 0 0.5rem;
    }

    .redes p {
        margin-left: 1rem;
        font-size: 0.9rem;
        color: #555;
        flex-basis: 100%;
        text-align: left;
    }

    .redes a {
        color: #1976d2;
        text-decoration: none;
    }

    .redes a:hover {
        text-decoration: underline;
    }

    @media (max-width: 900px) {
        .datos {
            flex-direction: column;
            align-items: flex-start;
            padding: 2rem 1rem;
        }
        .redes {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.5rem;
        }
        .redes hr {
            display: none;
        }
    }
</style>
