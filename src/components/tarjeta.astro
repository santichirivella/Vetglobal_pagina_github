---
interface Props {
    title: string;
    empresa: string;
    description: string;
    imageUrl: string;
}
const { title, description, empresa, imageUrl } = Astro.props;
---

<div class="product">
<img src={imageUrl} alt="Product Title" class="product-image" />
<h2 class="product-title">{title}</h2>
<p class="product-description">{description}</p>
<p class="product-empresa">{empresa}</p>
<button class="product-button">Add to Cart</button>
</div>


<style>
    .product {
        width: 360px;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        padding: 32px;
        margin: 16px;
        display: flex;
        flex-direction: column;
        align-items: center;
        transition: box-shadow 0.2s;
    }

    .product:hover {
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    }

    .product-image {
        width: 100%;
        height: 220px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 16px;
    }

    .product-title {
        font-size: 1.6rem;
        font-weight: 600;
        margin: 8px 0 4px 0;
        color: #222;
        text-align: center;
    }

    .product-description {
        font-size: 1.15rem;
        color: #555;
        margin-bottom: 8px;
        text-align: center;
    }

    .product-empresa {
        font-size: 1.1rem;
        color: #888;
        margin-bottom: 14px;
        text-align: center;
    }

    .product-button {
        background: #2d8cff;
        color: #fff;
        border: none;
        border-radius: 6px;
        padding: 14px 32px;
        font-size: 1.1rem;
        cursor: pointer;
        transition: background 0.2s;
    }

    .product-button:hover {
        background: #1766c2;
    }

    /* Layout for horizontal alignment and uniform spacing */
    :global(.tarjetas-container) {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 24px;
        padding: 24px 0;
    }
</style>
