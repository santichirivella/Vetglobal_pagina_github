import "../styles/global.css";
import { Icon } from "astro-icon/components";
---



<body>
		<div class="navbar">
			<!-- frame de la nav var -->
			<ul class="navbar__list">
				<img src="/logo.png" alt="" class="navbar__icon" />
				<li><a href="/acerca_de">acerca de</a></li>
				<li><a href="/">inicio</a></li>
				<li><a href="/comunidad">comunidad</a></li>
				<li><a href="/catalogue">catalogo</a></li>
				<Icon name="mdi:user" class="navbar__icon" />
				<button><a href="/login">iniciar sesion</a></button>
			</ul>
		</div>
		<hr
			style="margin: 2rem 0; border: none; border-top: 1px solid #0d0d0d;"
		/>
		<slot />
</body>
    	<style>
			.navbar__list {
				display: flex;
				justify-content: space-between;
			
		
			}
			.navbar {
				background: #252b42;
				padding: 1rem 0;
				box-shadow: 0 2px 8px rgba(0,0,0,0.04);
			}

			.navbar__list {
				align-items: center;
				gap: 2rem;
				list-style: none;
				margin: 0 auto;
				padding: 0 2rem;
				max-width: 1200px;
			}

			.navbar__icon {
				width: 36px;
				height: 36px;
				object-fit: contain;
			}

			.navbar__list li {
				margin: 0;
			}

			.navbar__list a {
				color: #fff;
				text-decoration: none;
				font-weight: 500;
				font-size: 1.1rem;
				padding: 0.5rem 1rem;
				border-radius: 4px;
				transition: background 0.2s;
			}

			.navbar__list a:hover {
				background: #0077cc;
				color: #fff;
			}

			.navbar__list button {
				background: #0077cc;
				color: #fff;
				border: none;
				padding: 0.5rem 1.2rem;
				border-radius: 4px;
				cursor: pointer;
				font-size: 1rem;
				font-weight: 600;
				transition: background 0.2s;
			}

			.navbar__list button:hover {
				background: #005fa3;
			}

			@media (max-width: 900px) {
				.navbar__list {
					flex-direction: column;
					align-items: flex-start;
					gap: 1rem;
					padding: 0 1rem;
				}
				.navbar {
					padding: 0.5rem 0;
				}
			}
		</style>