---
interface Props {
    title: string;
    description: string;
   
    
}
const {title, description, } = Astro.props;
---
<div class="product">
    
    <h2 class="product-title">{title}</h2>
    <p class="product-description">{description}</p>
  
</div>


<style>
.product {
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 4px 16px rgba(0,0,0,0.08), 0 1.5px 6px rgba(0,0,0,0.06);
    padding: 2rem;
    max-width: 350px;
    margin: 2rem auto;
    text-align: center;
    transition: box-shadow 0.2s;
}
.product:hover {
    box-shadow: 0 8px 32px rgba(0,0,0,0.12), 0 3px 12px rgba(0,0,0,0.10);
}
.product-title {
    font-size: 1.7rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: #2a3b4c;
}
.product-description {
    font-size: 1.1rem;
    color: #4a4a4a;
    margin-bottom: 1.5rem;
}
.product-image {
    width: 100%;
    max-width: 220px;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.07);
    margin-bottom: 1rem;
    object-fit: cover;
}
</style>