---
import { Icon } from "astro-icon/components";
import Layout from "../layouts/Layout.astro";
import Tarjeta from "../components/Tarjeta.astro";
---

<Layout>
	<div class="jumbotron">
		<div>
			<div>
				<div>
					<h1>LO IDEAL PARA EL GANADERO VENEZOLANO</h1>

					<h2>insumos agropecuarios y medicina veterinaria</h2>
				</div>
				<div class="botones">
					<button >COMPRAR AHORA</button>
					<a href="/catalogue"><button>VER PRODUCTOS</button></a>
				</div>
			</div>
			<img
				src="/caballo.png"
				alt=""
				style="max-width: 1000px; border-radius: 10rem;"
			/>
		</div>
	</div>

	<div class="tarjetas">
		<Tarjeta
			title="NITROFURANTOINA"
			empresa="CALOX"
			description="La nitrofurantoina se utiliza para tratar las infecciones del tracto urinario"
			imageUrl="/nitro.png"
		/>
		<Tarjeta
			title="AFTOVAC"
			empresa="CALA"
			description="Vacuna contra la fiebre aftosa"
			imageUrl="/aftovac.png"
		/>
		<Tarjeta
			title="BENZAPROC"
			empresa="SERVINSUMOS"
			description="ANTIBIÓTICO DE INMEDIATA, PERSISTENTE Y LARGA ACCIÓN"
			imageUrl="/benzaproc.webp"
		/>
	</div>
	<div class="jumbotron2">
		<div>
			<div>
				<div>
					<h1>
						ADQUIERE LOS MEJORES PRODUCTOS VETERINARIOS EN UNA GAMA
						TOTAL
					</h1>
				</div>
			</div>
			<img
				src="./vaca.png"
				alt=""
				style="max-width: 1000px; border-radius: 10rem;"
			/>
		</div>
	</div>

	<style>
		.jumbotron {
			gap: 25rem;
			position: relative;
			min-height: 800px;
			display: flex;
			align-items: center;
			justify-content: center;
			color: white;
			background:
				linear-gradient(
					180deg,
					rgba(0, 40, 100, 0.7) 0%,
					rgba(0, 80, 180, 0.5) 100%
				),
				url("/campo.jpg") center/cover no-repeat;
			border-radius: 1rem;
			overflow: hidden;
			box-shadow: 0 4px 24px rgba(0, 0, 0, 0.15);
			min-height: 1512px;
			padding-top: 4rem;
			padding-bottom: 4rem;
		}
		
		.jumbotron h1 {
			font-size: 56px;
			line-height: 1.2;
			white-space: pre-line;
			max-width: 600px;
			word-break: break-word;
			padding-left: 90px;
		}

		@media (max-width: 900px) {
			.jumbotron h1 {
				font-size: 36px;
				max-width: 90vw;
			}
		}
		.botones {
			display: flex;
			gap: 1.5rem;
			margin-top: 2rem;
			padding-left: 90px;
		}

		.botones button {
			font-size: 1.1rem;
			padding: 0.9rem 2.2rem;
			border-radius: 2rem;
			border: 2px solid #213749;
			cursor: pointer;
			transition: background 0.2s, color 0.2s, box-shadow 0.2s;
			font-weight: 600;
			box-shadow: 0 2px 8px rgba(33, 150, 243, 0.08);
		}

		.botones button:first-child {
			background: #213444;
			color: #fff;
		}

		.botones button:last-child {
			background: transparent;
			color: #2196f3;
		}

		.botones button:hover,
		.botones button:focus {
			box-shadow: 0 4px 16px rgba(33, 150, 243, 0.18);
			transform: translateY(-2px) scale(1.03);
		}

		@media (max-width: 900px) {
			.botones {
				padding-left: 0;
				justify-content: flex-start;
			}
		}

		
		
		

		.jumbotron h2 {
			font-size: 24px;
			padding-left:90px;
		}
		.jumbotron > div {
			display: flex;
			align-items: center;
			justify-content: space-between;
			gap: 25rem;
		}

		.jumbotron img {
			width: 500px;
			height: 500px;
		}
		

		

		.tarjetas {
			display: flex;
			gap: 4rem;
			margin-top: 3rem;
			margin-bottom: 3rem;
			justify-content: center;
			align-items: flex-start;
			flex-wrap: wrap;
		}

		.jumbotron2 {
			gap: 40rem;
			position: relative;
			min-height: 800px;
			display: flex;
			align-items: center;
			justify-content: center;
			color: white;
			background:
				linear-gradient(
					180deg,
					rgba(0, 40, 100, 0.7) 0%,
					rgba(0, 80, 180, 0.5) 100%
				),
				url("/campo.jpg") center/cover no-repeat;
			border-radius: 1rem;
			overflow: hidden;
			box-shadow: 0 4px 24px rgba(0, 0, 0, 0.15);
			min-height: 1512px;
			padding-top: 4rem;
			padding-bottom: 4rem;
		}

		.jumbotron2 > div {
			display: flex;
			align-items: center;
			justify-content: space-between;
			gap: 20rem;
		}

		.jumbotron2 img {
			width: 800px;
			height: 800px;
			border-radius: 10rem;
		}

		.jumbotron2 h1 {
			font-size: 42px;
			line-height: 1.2;
			max-width: 600px;
			word-break: break-word;
			white-space: pre-line;
		}

		@media (max-width: 900px) {
			.jumbotron2 > div {
				flex-direction: row-reverse;
				align-items: flex-start;
				gap: 2rem;
			}
			.jumbotron2 img {
				width: 90vw;
				height: auto;
			}
			
		}
		.jumbotron2 > div {
			flex-direction: row-reverse;
		}
		
	</style>
	
</Layout>
