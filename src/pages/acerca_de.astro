import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import Servicios from "../pages/Servicios.astro";
---

<Layout>
   
   <div class="dec">
        <!-- <Icon name = "grommet-icons:services"></Icon>
        <p>servicios</p>
		<div></div> -->
   
    <Servicios 
    title="Consulta veterinaria"
    description="estamos capaitados para brindar ayuda y guia de acuerdo a tus necesidades"
    />
    <Servicios 
    title="Venta de medicamentos"
    description="somos capaces de sustentar con total efectividad medicamentos o consumibles en la industria veterinaria y ganadera para el cuidado optimo de tus animales"
    />
    <Servicios 
    title="Cuidado animal"
    description="Hay medicos capacitados para diversos cuidado agropecuarios y para mascotas, como vacunacion,esterilizacion , castramiento y transplante"
    />
    <Servicios 
    title="Salud animal"
    description="Tenemos un catalogo completo de medicinas veterinarias y equipo capacitado para ayudar a tus animales"
    />
    </div>
    
</Layout>

<style>
.dec {
			gap: 25rem;
			position: relative;
			min-height: 800px;
			display: flex;
			align-items: start;
			justify-content: start;
			color: white;
			background:
				linear-gradient(
					180deg,
					rgba(0, 40, 100, 0.7) 0%,
					rgba(0, 80, 180, 0.5) 100%
				),
				url("/ft.jpeg") center/cover no-repeat;
			border-radius: 1rem;
			overflow: hidden;
			box-shadow: 0 4px 24px rgba(0, 0, 0, 0.15);
			min-height: 1512px;
			padding-top: 4rem;
			padding-bottom: 4rem;
            padding-left: 12rem;
            padding-right: 12rem;
            flex-direction: column;
            
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            grid-template-rows: repeat(2, auto);
            gap: 2rem;
            align-items: stretch;
            justify-items: stretch;
            font-size: 1rem;
}

.dec > * {
    padding: 1rem;
    background: rgba(0, 40, 100, 0.85);
    border-radius: 0.75rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    min-width: 0;
    min-height: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
}

.dec h2, .dec h3, .dec h4, .dec h5, .dec h6 {
    margin: 0 0 0.5rem 0;
    font-size: 1.1rem;
}

.dec p {
    margin: 0;
    font-size: 0.95rem;
    line-height: 1.4;
}

</style>